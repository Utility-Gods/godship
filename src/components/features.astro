---
import { Icon } from "astro-icon/components";

const features = [
  // Main Products (PhotoShip & OrangeGas first)
  {
    title: "PhotoShip - Catalogue Generation At Large",
    description:
      "Enterprise-grade OCR and image processing SaaS for e-commerce. Transform product catalogs, extract data from PDFs, and generate custom brochures with AI-powered processing.",
    icon: "ph:image-bold",
    link: "https://photoship.app",
    isMainProduct: true,
  },
  {
    title: "OrangeGas - Headless CMS",
    description:
      "A general-purpose CMS that empowers the way you create and manage content. Build collections, blogs, and rich text content with ease.",
    icon: "ph:database-bold",
    link: "https://orangegas.utilitygods.com",
    isMainProduct: true,
  },
  // Other Products & Services
  {
    title: "DocuGods",
    description:
      "AI-powered document helper that simplifies the process of applying for government IDs like Aadhar, PAN, Voter ID, and more.",
    icon: "ph:file-text-bold",
    link: "https://docugods.com",
  },
  {
    title: "PasteViz",
    description:
      "A modern web application built with Svelte that allows users to generate and embed analytics/visualizations on the fly.",
    icon: "ph:chart-line-bold",
    link: "https://pasteviz.vercel.app/",
  },
  {
    title: "Batch GeoCoding API",
    description:
      "A powerful Express.js API for batch geocoding addresses. Built with TypeScript, Prisma ORM, and MySQL.",
    icon: "ph:map-pin-bold",
    link: "https://geocoding-api.vercel.app/",
  },
  {
    title: "Fillo - AI Form Filler",
    description:
      "AI-powered Chrome extension that intelligently fills form fields on localhost development sites. Support for multiple AI providers and smart caching for efficient development.",
    icon: "ph:magic-wand-bold",
    link: "https://github.com/Utility-Gods/fillo",
  },
  // Experiments & Open Source
  {
    title: "Hypermedia Sync",
    description:
      "Real-time synchronization experiments using hypermedia-driven architecture. Sync 10,000 checkboxes across browsers with Server-Sent Events and HTML fragments.",
    icon: "ph:broadcast-bold",
    link: "https://hypermedia.utilitygods.com",
  },
  {
    title: "Angular-httpshooter",
    description:
      "An AngularJS factory that manages HTTP calls asynchronously, ensuring single-threaded communication between server and client.",
    icon: "ph:arrows-out-bold",
    link: "https://www.npmjs.com/package/angular-httpshooter",
  },
  {
    title: "Go HTMX Templates",
    description:
      "Production-ready Go templates featuring HTMX, Templ, Echo, and Tailwind CSS for building modern web applications.",
    icon: "ph:code-bold",
    link: "https://github.com/Utility-Gods/go-htmx-templ-echo-air-tailwind",
  },
  {
    title: "PhotoCaml App in OCaml with Dream",
    description: "PhotoCaml App in OCaml with Dream",
    icon: "ph:camera-bold",
    link: "https://github.com/Utility-Gods/photocaml",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2
    class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-red-500] text-center">
    Featured Projects
  </h2>
  <p class="text-lg mt-4 text-gray-600 text-center max-w-2xl mx-auto">
    From production applications to developer templates, we create tools and
    solutions that power modern web development.
  </p>
</div>

<!-- Main Products Section -->
<div class="mb-16">
  <h3 class="text-xl font-semibold text-gray-800 mb-8 text-center">Our Flagship Products</h3>
  <div class="grid sm:grid-cols-2 gap-8 mb-16">
    {
      features.filter(item => item.isMainProduct).map((item) => (
        <a
          href={item.link}
          target="_blank"
          rel="noopener noreferrer"
          class="flex gap-4 items-start hover:scale-105 transition-transform duration-300 group bg-red-50 p-6 rounded-xl border-2 border-red-200">
          <div class="mt-1 bg-[#e8403a] rounded-full p-3 w-12 h-12 shrink-0 flex items-center justify-center group-hover:bg-[#e8403a]/90">
            <span class="text-white w-6 h-6">
              <Icon name={item.icon} />
            </span>
          </div>
          <div class="flex-1">
            <h3 class="font-semibold text-xl text-red-600 mb-2">{item.title}</h3>
            <p class="text-slate-600 leading-relaxed">{item.description}</p>
          </div>
        </a>
      ))
    }
  </div>
</div>

<!-- Other Projects Section -->
<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-16">
  {
    features.filter(item => !item.isMainProduct).map((item) => (
      <a
        href={item.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex gap-4 items-start hover:scale-105 transition-transform duration-300 group">
        <div class="mt-1 bg-[#e8403a] rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center group-hover:bg-[#e8403a]/90">
          <span class="text-white w-4 h-4">
            <Icon name={item.icon} />
          </span>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-red-500]">{item.title}</h3>
          <p class="text-slate-600 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </a>
    ))
  }
</div>

<div class="mt-12 text-center">
  <a
    href="/services"
    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-500 hover:bg-red-600 md:py-4 md:text-lg md:px-8 transition duration-300">
    View All Services
    <Icon name="ph:arrow-right-bold" class="ml-2 w-5 h-5" />
  </a>
</div>
