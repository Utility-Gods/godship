---
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Photoship",
    description:
      "A modern cloud image gallery solution with powerful features. Built with Go and Python for optimal performance and scalability.",
    icon: "ph:image-bold",
    link: "https://photoship.co",
  },
  {
    title: "QR Code Generator",
    description:
      "AI-powered QR code generation tool that creates beautiful and functional QR codes with advanced customization options.",
    icon: "ph:qr-code-bold",
    link: "https://github.com/Utility-Gods/qr-gen-ai",
  },
  {
    title: "Orange Gas",
    description:
      "A comprehensive web application built with modern frontend technologies.",
    icon: "ph:gas-pump-bold",
    link: "https://orangegas.co",
  },
  {
    title: "Go HTMX Templates",
    description:
      "Production-ready Go templates featuring HTMX, Templ, Echo, and Tailwind CSS for building modern web applications.",
    icon: "ph:code-bold",
    link: "https://github.com/Utility-Gods/go-htmx-templ-echo-air-tailwind",
  },
  {
    title: "FastAPI Templates",
    description:
      "Python webapp scaffolding with FastAPI, SQLAlchemy, HTMX, and Tailwind CSS for rapid API development.",
    icon: "ph:terminal-window-bold",
    link: "https://github.com/Utility-Gods/python-fastapi-sqlchemy-htmx-tailwind",
  },
  {
    title: "Developer Tools",
    description:
      "Various utility tools including TTLM (Talk to Language Model), Gottem CLI, and Node.js packages for enhanced development workflow.",
    icon: "ph:wrench-bold",
    link: "https://github.com/Utility-Gods",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2
    class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-[#e8403a] text-center">
    Our Projects & Templates
  </h2>
  <p class="text-lg mt-4 text-gray-600 text-center max-w-2xl mx-auto">
    From production applications to developer templates, we create tools and
    solutions that power modern web development.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <a
        href={item.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex gap-4 items-start hover:scale-105 transition-transform duration-300 group">
        <div class="mt-1 bg-[#e8403a] rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center group-hover:bg-[#e8403a]/90">
          <span class="text-white w-4 h-4">
            <Icon name={item.icon} />
          </span>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-[#e8403a]">{item.title}</h3>
          <p class="text-slate-600 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </a>
    ))
  }
</div>
