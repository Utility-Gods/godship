---
import { Icon } from "astro-icon/components";

const features = [
  // Main Products (PhotoShip & OrangeGas first)
  {
    title: "PhotoShip",
    description:
      "Enterprise OCR and image processing SaaS for e-commerce. Transform product catalogs, extract data from PDFs, and generate custom brochures with AI-powered processing.",
    icon: "ph:image-bold",
    link: "https://photoship.app",
    isMainProduct: true,
  },
  {
    title: "OrangeGas CMS",
    description:
      "A headless CMS that empowers the way you create and manage content. Build collections, blogs, and rich text content with ease.",
    icon: "ph:database-bold",
    link: "https://orangegas.utilitygods.com",
    isMainProduct: true,
  },
  // Experiments & Public Projects
  {
    title: "Hypermedia Sync Experiment",
    description:
      "Real-time synchronization demo using hypermedia architecture. Syncing 10,000 checkboxes across browsers with Server-Sent Events.",
    icon: "ph:broadcast-bold",
    link: "https://hypermedia.utilitygods.com",
  },
  {
    title: "Fillo - AI Form Filler",
    description:
      "Chrome extension that intelligently fills form fields on localhost development sites using AI. Supports multiple providers with smart caching.",
    icon: "ph:magic-wand-bold",
    link: "https://github.com/Utility-Gods/fillo",
  },
  {
    title: "Go HTMX Template",
    description:
      "Production-ready starter template with Go Echo, HTMX, Templ, and Tailwind CSS for building modern web applications.",
    icon: "ph:code-bold",
    link: "https://github.com/Utility-Gods/go-htmx-templ-echo-air-tailwind",
  },
  {
    title: "FastAPI HTMX Template",
    description:
      "Full-stack Python starter with FastAPI, HTMX, Postgres, and Tailwind CSS. Includes authentication and modern tooling.",
    icon: "ph:code-bold",
    link: "https://github.com/Utility-Gods/python-htmx-postgres-template",
  },
  {
    title: "SvelteKit Starter",
    description:
      "Modern SvelteKit template with shadcn-svelte components and Tailwind CSS for rapid application development.",
    icon: "ph:code-bold",
    link: "https://github.com/Utility-Gods/sveltekit-starter",
  },
  {
    title: "Node Sitemap CLI",
    description:
      "Command-line tool for generating XML sitemaps for web applications. Published on npm.",
    icon: "ph:tree-structure-bold",
    link: "https://github.com/Utility-Gods/node-sitemap-cli",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2
    class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-red-500] text-center">
    Featured Work
  </h2>
  <p class="text-lg mt-4 text-gray-600 text-center max-w-2xl mx-auto">
    Our main products, experiments, and starter templates for modern web development.
  </p>
</div>

<!-- Main Products Section -->
<div class="mb-16">
  <h3 class="text-xl font-semibold text-gray-800 mb-8 text-center">Main Products</h3>
  <div class="grid sm:grid-cols-2 gap-8 mb-16">
    {
      features.filter(item => item.isMainProduct).map((item) => (
        <a
          href={item.link}
          target="_blank"
          rel="noopener noreferrer"
          class="flex gap-4 items-start hover:scale-105 transition-transform duration-300 group bg-red-50 p-6 rounded-xl border-2 border-red-200">
          <div class="mt-1 bg-[#e8403a] rounded-full p-3 w-12 h-12 shrink-0 flex items-center justify-center group-hover:bg-[#e8403a]/90">
            <span class="text-white w-6 h-6">
              <Icon name={item.icon} />
            </span>
          </div>
          <div class="flex-1">
            <h3 class="font-semibold text-xl text-red-600 mb-2">{item.title}</h3>
            <p class="text-slate-600 leading-relaxed">{item.description}</p>
          </div>
        </a>
      ))
    }
  </div>
</div>

<!-- Other Projects Section -->
<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-16">
  {
    features.filter(item => !item.isMainProduct).map((item) => (
      <a
        href={item.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex gap-4 items-start hover:scale-105 transition-transform duration-300 group">
        <div class="mt-1 bg-[#e8403a] rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center group-hover:bg-[#e8403a]/90">
          <span class="text-white w-4 h-4">
            <Icon name={item.icon} />
          </span>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-red-500]">{item.title}</h3>
          <p class="text-slate-600 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </a>
    ))
  }
</div>

<div class="mt-12 text-center">
  <a
    href="/services"
    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-500 hover:bg-red-600 md:py-4 md:text-lg md:px-8 transition duration-300">
    View All Services
    <Icon name="ph:arrow-right-bold" class="ml-2 w-5 h-5" />
  </a>
</div>
