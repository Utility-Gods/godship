---
import { Icon } from "astro-icon/components";
const logos = [
  { src: "/icons/react.svg", alt: "React" },
  { src: "/icons/svelte.svg", alt: "Svelte" },
  { src: "/icons/nextjs.svg", alt: "Next.js" },
  { src: "/icons/vue.svg", alt: "Vue" },
  { src: "/icons/wordpress.svg", alt: "WordPress" },
  { src: "/icons/htmx.svg", alt: "HTMX" },
  { src: "/icons/html.svg", alt: "HTML5" },
  { src: "/icons/css.svg", alt: "CSS3" },
  { src: "/icons/tailwind.svg", alt: "Tailwind CSS" },
  { src: "/icons/angular.svg", alt: "AngularJS" },
  { src: "/icons/golang.svg", alt: "Go" },
  { src: "/icons/nodejs.svg", alt: "Node.js" },
  { src: "/icons/express.svg", alt: "Express" },
  { src: "/icons/python.svg", alt: "Python" },
  { src: "/icons/fastapi.svg", alt: "FastAPI" },
  { src: "/icons/echo.svg", alt: "Echo" },
  { src: "/icons/hf.svg", alt: "Hugging Face" },
  { src: "/icons/langchain.svg", alt: "LangChain" },
  { src: "/icons/docker.svg", alt: "Docker" },
  { src: "/icons/typescript.svg", alt: "TypeScript" },
  { src: "/icons/git.svg", alt: "Git" },
  { src: "/icons/prisma.svg", alt: "Prisma" },
  { src: "/icons/mysql.svg", alt: "MySQL" },
  { src: "/icons/javascript.svg", alt: "JavaScript" },
  { src: "/icons/openai.svg", alt: "OpenAI" },
  { src: "/icons/solidjs.svg", alt: "SolidJS" },
  { src: "/icons/strapi.svg", alt: "Strapi" },
  { src: "/icons/tensorflow.svg", alt: "TensorFlow" },
  { src: "/icons/ocaml.svg", alt: "OCaml" },
];
---

<div class="mt-24 mb-16">
  <div class="mx-auto max-w-6xl px-4 lg:px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wider mb-2">
        Technology Stack
      </h3>
      <p class="text-slate-600 text-sm">
        Modern tools and frameworks we work with
      </p>
    </div>

    <!-- Logos Grid -->
    <div class="relative overflow-hidden">
      <!-- Subtle gradient overlay on edges -->
      <div class="absolute inset-y-0 left-0 w-12 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
      <div class="absolute inset-y-0 right-0 w-12 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>

      <div class="flex flex-wrap items-center justify-center gap-6 py-8 px-4">
        {logos.map((logo) => (
          <div class="group w-14 h-14 flex items-center justify-center rounded-lg hover:bg-slate-50 transition-all duration-300 p-2 flex-shrink-0">
            <img
              src={logo.src}
              alt={logo.alt}
              class="max-w-full max-h-full object-contain opacity-40 grayscale group-hover:opacity-100 group-hover:grayscale-0 transition-all duration-300"
              title={logo.alt}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  [astro-icon] {
    color: #94a3b8;
  }
  [astro-icon]:hover {
    color: #475569;
  }
</style>
