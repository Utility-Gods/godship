---
// @ts-ignore
import { Icon } from "astro-icon/components";
---

<div class="mt-24">
  <h2 class="text-center text-slate-500">Works with All Platforms</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    <span class="h-8 md:h-12">
      <Icon name="ph:windows-logo-bold" />
    </span>
    <span class="h-8 md:h-12">
      <Icon name="ph:linux-logo-bold" />
    </span>
    <span class="h-8 md:h-14">
      <Icon name="ph:android-logo-bold" />
    </span>
    <span class="h-8 md:h-16">
      <Icon name="ph:apple-logo-bold" />
    </span>
  </div>
</div>
