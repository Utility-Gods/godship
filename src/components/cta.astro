---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon/components";
---

<div
  class="bg-gradient-to-br from-black to-slate-900 p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute top-0 left-0 w-72 h-72 bg-red-500 rounded-full filter blur-3xl transform -translate-x-1/2 -translate-y-1/2">
    </div>
    <div
      class="absolute bottom-0 right-0 w-72 h-72 bg-red-500 rounded-full filter blur-3xl transform translate-x-1/2 translate-y-1/2">
    </div>
  </div>

  <div class="relative z-10">
    <h2 class="text-white text-4xl md:text-6xl font-extrabold tracking-tight">
      Let's Build Together
    </h2>
    <p
      class="text-slate-300 mt-6 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
      We're crafting open-source tools that simplify development workflows. From
      CLI utilities to web templates, every project is built with developer
      experience in mind.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 mt-8 justify-center">
      <Link
        href="https://github.com/siddarthvader"
        style="inverted"
        class="inline-flex items-center gap-2">
        <Icon name="ph:github-logo-bold" class="w-5 h-5" />
        Explore Projects
      </Link>
      <Link
        href="/contact"
        style="primary"
        class="inline-flex items-center gap-2 bg-red-500 hover:bg-red-600">
        <Icon name="ph:envelope-bold" class="w-5 h-5" />
        Get in Touch
      </Link>
    </div>

    <div class="mt-12 flex flex-wrap justify-center gap-8">
      <div class="flex items-center gap-2">
        <Icon name="ph:code-bold" class="w-5 h-5 text-blue-400" />
        <span class="text-slate-300">Modern Tech Stack</span>
      </div>
      <div class="flex items-center gap-2">
        <Icon name="ph:heart-bold" class="w-5 h-5 text-red-400" />
        <span class="text-slate-300">Open Source First</span>
      </div>
      <div class="flex items-center gap-2">
        <Icon name="ph:rocket-bold" class="w-5 h-5 text-green-400" />
        <span class="text-slate-300">Developer Experience</span>
      </div>
    </div>
  </div>
</div>
