---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Products",
    path: "#",
    children: [
      { title: "Orange Gas", path: "http://www.orangegas.co" },
      {
        title: "Gottem CLI tool",
        path: "https://github.com/Utility-Gods/gottem",
      },
      {
        title: "Node Sitemap Generator",
        path: "https://www.npmjs.com/package/node-sitemap-cli",
      },
      { title: "Caption It Now", path: "http://www.captionitnow.com" },
      { title: "QR Gods", path: "http://www.qrgods.com" },
      { title: "AI Document Helper", path: "http://www.docugods.com" },
      { title: "Song It Now", path: "http://www.songitnow.com" },
    ],
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "https://www.orangegas.co/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo.png" alt="Utility Gods Logo" class="h-24" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      target="_blank"
                      class="flex lg:px-3 py-2 text-[#e8403a] hover:text-gray-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link
            href="www.orangegas.co"
            block
            size="md"
            class="bg-[#e8403a] hover:bg-[#e8403a]/90">Explore Products</Link
          >
          <Link
            href="www.orangegas.co"
            size="md"
            block
            class="border-[#e8403a] text-[#e8403a]">Sign up</Link
          >
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link
          href="/services"
          size="md"
          class="bg-[#e8403a] hover:bg-[#e8403a]/90">Explore Services</Link
        >
      </div>
    </div>
  </header>
</Container>
