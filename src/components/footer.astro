---
import { Icon } from "astro-icon/components";
import Link from "./ui/link.astro";
---

<footer class="mt-20 border-t border-slate-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Products Column -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">
          Products
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="https://photoship.co"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Photoship
            </a>
          </li>
          <li>
            <a
              href="https://orangegas.co"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Orange Gas
            </a>
          </li>
          <li>
            <a
              href="https://github.com/Utility-Gods/qr-gen-ai"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              QR Generator
            </a>
          </li>
        </ul>
      </div>

      <!-- Developer Tools Column -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">
          Developer Tools
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="https://github.com/Utility-Gods/go-htmx-templ-echo-air-tailwind"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Go HTMX Template
            </a>
          </li>
          <li>
            <a
              href="https://github.com/Utility-Gods/python-fastapi-sqlchemy-htmx-tailwind"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              FastAPI Template
            </a>
          </li>
          <li>
            <a
              href="https://github.com/Utility-Gods/TTLM"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              TTLM
            </a>
          </li>
          <li>
            <a
              href="https://github.com/Utility-Gods/gottem"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Gottem CLI
            </a>
          </li>
        </ul>
      </div>

      <!-- Company Column -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">
          Company
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/about"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              About
            </a>
          </li>
          <li>
            <a
              href="https://siddharthjain.in"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Blog
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-base text-gray-500 hover:text-[#e3382f]">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Column -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">
          Connect
        </h3>
        <div class="flex space-x-4">
          <a
            href="https://github.com/Utility-Gods"
            class="text-gray-500 hover:text-[#e3382f]">
            <span class="h-6 w-6">
              <Icon name="ph:github-logo-bold" />
            </span>
          </a>
          <Link
            href="/contact"
            style="outline"
            class="flex gap-1 items-center justify-center border-[#e3382f] text-[#e3382f]">
            <span class="w-5 h-5 text-[#e3382f]">
              <Icon name="ph:envelope-bold" />
            </span>
            Contact Us
          </Link>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-slate-200">
      <p class="text-center text-base text-slate-500">
        Copyright © {new Date().getFullYear()} Utility Gods. All rights reserved.
      </p>
      <p class="text-center text-sm text-slate-400 mt-2">
        Built with ❤️ by <a
          href="https://siddharthjain.in"
          class="hover:text-[#e3382f]">Siddharth</a
        >
      </p>
    </div>
  </div>
</footer>
