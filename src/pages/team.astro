---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const teamMembers = [
  {
    name: "Siddharth",
    title: "CTO",
    avatar: "/team/sid.jpeg",
    bio: "Software engineer passionate about open-source development and building developer-first tools. Based in India, I focus on creating innovative solutions that make developers' lives easier.",
    links: [
      {
        name: "GitHub",
        url: "https://github.com/siddarthvader",
        icon: "ph:github-logo-bold",
      },
      {
        name: "Personal Website",
        url: "https://siddharthjain.in",
        icon: "ph:globe-bold",
      },
    ],
  },
];
---

<Layout title="Our Team">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Our Team</Fragment>
      <Fragment slot="desc">
        Meet the passionate developers behind Utility Gods
      </Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-8 mx-auto max-w-4xl mt-16">
      <div class="grid md:grid-cols-2 gap-10">
        {
          teamMembers.map((member) => (
            <div class="group">
              <div class="w-48 h-48 mx-auto">
                <Image
                  src={member.avatar}
                  alt={member.name}
                  width={200}
                  height={200}
                  class="w-full h-full object-cover rounded-full shadow-lg"
                />
              </div>

              <div class="mt-6 text-center">
                <h2 class="text-2xl font-bold text-slate-800">{member.name}</h2>
                <h3 class="text-lg text-red-500">{member.title}</h3>
                <p class="text-slate-600 mt-2">{member.bio}</p>

                <div class="flex gap-4 mt-4 justify-center">
                  {member.links.map((link) => (
                    <a
                      href={link.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-slate-100 p-2 rounded-lg hover:bg-slate-200 transition-colors">
                      <Icon name={link.icon} class="w-5 h-5 text-slate-700" />
                      <span class="sr-only">{link.name}</span>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-8 text-center">
        <h3 class="text-2xl font-bold text-slate-800 mb-4">Join Our Team</h3>
        <p class="text-slate-600 mb-6">
          We're always looking for talented developers who share our passion for
          open source and innovation.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition-colors">
          Get in Touch
          <Icon name="ph:arrow-right-bold" class="w-4 h-4" />
        </a>
      </div>
    </div>
  </Container>
</Layout>
