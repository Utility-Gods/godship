---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title"
        >About <span class="text-red-500">Utility Gods</span></Fragment
      >
      <Fragment slot="desc"
        >Building developer-first tools and solutions with a focus on open
        source innovation and technical excellence.</Fragment
      >
    </Sectionhead>

    <div class="flex flex-col gap-12 items-center max-w-6xl mx-auto">
      <!-- Main Products -->
      <div class="grid md:grid-cols-2 gap-8 mt-8 w-full">
        <div
          class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-all border border-slate-200">
          <div class="mb-4">
            <span class="inline-block p-3 bg-red-50 text-red-500 rounded-lg">
              <Icon name="ph:database-bold" class="w-8 h-8" />
            </span>
          </div>
          <h3 class="text-2xl font-semibold mb-3">OrangeGas CMS</h3>
          <p class="text-slate-600 mb-4">
            A general-purpose CMS that empowers the way you create and manage
            content. Build collections, blogs, and rich text content with ease.
          </p>
          <a
            href="https://orangegas.co"
            class="text-red-500 hover:text-red-600 inline-flex items-center gap-1">
            Learn more <Icon name="ph:arrow-right-bold" class="w-4 h-4" />
          </a>
        </div>

        <div
          class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-all border border-slate-200">
          <div class="mb-4">
            <span class="inline-block p-3 bg-red-50 text-red-500 rounded-lg">
              <Icon name="ph:package-bold" class="w-8 h-8" />
            </span>
          </div>
          <h3 class="text-2xl font-semibold mb-3">Developer Tools</h3>
          <p class="text-slate-600 mb-4">
            A suite of tools including QR Gods for QR code generation, PhotoShip
            for image processing, and gottem cli for development workflows.
          </p>
          <a
            href="/services"
            class="text-red-500 hover:text-red-600 inline-flex items-center gap-1">
            View all tools <Icon name="ph:arrow-right-bold" class="w-4 h-4" />
          </a>
        </div>
      </div>

      <!-- Template Categories -->
      <div class="w-full">
        <h3 class="text-2xl font-bold text-center mb-8">
          Development Templates
        </h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all border border-slate-200">
            <div class="mb-4">
              <span class="inline-block p-3 bg-red-50 text-red-500 rounded-lg">
                <Icon name="ph:code-bold" class="w-6 h-6" />
              </span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Web Templates</h3>
            <p class="text-slate-600">
              Modern templates for Astro, SvelteKit, and SolidJS with Tailwind
              and best practices built-in.
            </p>
          </div>

          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all border border-slate-200">
            <div class="mb-4">
              <span class="inline-block p-3 bg-red-50 text-red-500 rounded-lg">
                <Icon name="ph:terminal-window-bold" class="w-6 h-6" />
              </span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Backend Templates</h3>
            <p class="text-slate-600">
              FastAPI, Go Echo, and HTMX templates with modern stack
              integrations.
            </p>
          </div>

          <div
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all border border-slate-200">
            <div class="mb-4">
              <span class="inline-block p-3 bg-red-50 text-red-500 rounded-lg">
                <Icon name="ph:brain-bold" class="w-6 h-6" />
              </span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Full-Stack Starters</h3>
            <p class="text-slate-600">
              Complete setups with databases, authentication, and modern UI
              frameworks.
            </p>
          </div>
        </div>
      </div>

      <!-- GitHub Stats -->
      <div class="w-full text-center">
        <h3 class="text-2xl font-bold mb-6">Our Impact</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-slate-50 p-6 rounded-xl">
            <div class="text-3xl font-black text-red-500 mb-2">9</div>
            <div class="text-slate-600 font-medium">Template Repositories</div>
          </div>
          <div class="bg-slate-50 p-6 rounded-xl">
            <div class="text-3xl font-black text-red-500 mb-2">4</div>
            <div class="text-slate-600 font-medium">Core Products</div>
            <div class="text-sm text-slate-500 mt-1">
              OrangeGas, gottem cli, QR Gods, PhotoShip
            </div>
          </div>
          <div class="bg-slate-50 p-6 rounded-xl">
            <div class="text-3xl font-black text-red-500 mb-2">100%</div>
            <div class="text-slate-600 font-medium">Open Source</div>
            <div class="text-sm text-slate-500 mt-1">MIT & GPL Licensed</div>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="w-full text-center flex gap-4 justify-center">
        <a
          href="/services"
          class="inline-flex items-center gap-2 px-6 py-3 text-white bg-red-500 rounded-lg hover:bg-red-600 transition-colors">
          <Icon name="ph:rocket-bold" class="w-5 h-5" />
          Explore Our Services
        </a>
        <a
          href="https://github.com/Utility-Gods"
          class="inline-flex items-center gap-2 px-6 py-3 text-red-500 border-2 border-red-500 rounded-lg hover:bg-red-50 transition-colors">
          <Icon name="ph:github-logo-bold" class="w-5 h-5" />
          View Templates
        </a>
      </div>
    </div>
  </Container>
</Layout>
