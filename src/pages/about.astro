---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const teamMembers = [
  {
    name: "Siddharth",
    title: "Founder & Developer",
    avatar: "/team/sid.jpeg",
    bio: "Software engineer passionate about building practical tools and solving real problems with code. Based in India, focused on creating solutions that work.",
    links: [
      {
        name: "GitHub",
        url: "https://github.com/siddarthvader",
        icon: "ph:github-logo-bold",
      },
      {
        name: "Personal Website",
        url: "https://siddharthjain.in",
        icon: "ph:globe-bold",
      },
    ],
  },
];
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Who We Are</Fragment>
      <Fragment slot="desc"
        >Our story, our values, and the people behind Utility Gods.</Fragment
      >
    </Sectionhead>

    <div class="max-w-6xl mx-auto mt-12 mb-20">
      <div class="grid lg:grid-cols-3 gap-8 pb-12">
        <!-- Left Column: About Us -->
        <div class="lg:col-span-2">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">About Us</h2>
          <p class="text-slate-600 leading-relaxed mb-4">
            Utility Gods is a software development agency based in Jaipur, India. We build
            web applications, internal tools, and SaaS products for clients, and we also
            work on our own products like PhotoShip and OrangeGas.
          </p>
          <p class="text-slate-600 leading-relaxed mb-8">
            We've completed several projects through Upwork with a 100% job success rate.
            We work with modern tech stacks—Go, Python, TypeScript, React, Svelte—and we
            share starter templates and tools on GitHub when we can.
          </p>

          <!-- Track Record -->
          <h3 class="text-2xl font-bold text-slate-900 mb-6">Track Record</h3>
          <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 mb-4">
              <div class="text-center">
                <div class="text-2xl font-bold text-red-500 mb-1">100%</div>
                <div class="text-xs text-slate-600">Job Success</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-red-500 mb-1">$70K+</div>
                <div class="text-xs text-slate-600">Total Earned</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-red-500 mb-1">1,643+</div>
                <div class="text-xs text-slate-600">Hours Worked</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-red-500 mb-1">6+</div>
                <div class="text-xs text-slate-600">Jobs Done</div>
              </div>
            </div>
            <div class="text-center pt-4 border-t border-slate-200">
              <a
                href="https://www.upwork.com/agencies/utilitygods/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-red-500 hover:text-red-600 text-sm font-medium">
                <Icon name="ph:arrow-square-out" class="w-4 h-4" />
                View Upwork Profile
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column: Team -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-6">The Team</h2>
          {teamMembers.map((member) => (
            <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
              <div class="w-32 h-32 mx-auto mb-4">
                <Image
                  src={member.avatar}
                  alt={member.name}
                  width={128}
                  height={128}
                  class="w-full h-full object-cover rounded-full shadow-lg"
                />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-1 text-center">
                {member.name}
              </h3>
              <p class="text-red-500 font-medium mb-4 text-center text-sm">{member.title}</p>
              <p class="text-slate-600 mb-4 text-sm leading-relaxed">{member.bio}</p>

              <div class="flex flex-col gap-2">
                {member.links.map((link) => (
                  <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 bg-slate-100 px-3 py-2 rounded-lg hover:bg-slate-200 transition-colors text-slate-700 text-sm font-medium justify-center">
                    <Icon name={link.icon} class="w-4 h-4" />
                    {link.name}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center pt-12">
        <h3 class="text-2xl font-bold text-slate-900 mb-4">
          Let's Build Something Together
        </h3>
        <p class="text-slate-600 mb-6 max-w-2xl mx-auto">
          Whether you need a custom web application, want to discuss a product idea,
          or just want to say hi—we'd love to hear from you.
        </p>
        <div class="flex gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center gap-2 px-6 py-3 text-white bg-red-500 rounded-lg hover:bg-red-600 transition-colors">
            <Icon name="ph:envelope-bold" class="w-5 h-5" />
            Get in Touch
          </a>
          <a
            href="/services"
            class="inline-flex items-center gap-2 px-6 py-3 text-red-500 border-2 border-red-500 rounded-lg hover:bg-red-50 transition-colors">
            <Icon name="ph:rocket-bold" class="w-5 h-5" />
            View Services
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
