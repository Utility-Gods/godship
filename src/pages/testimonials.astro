---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const upworkStats = [
  {
    name: "Job Success",
    value: "100%",
    icon: "ph:star-fill",
  },
  {
    name: "Total Earned",
    value: "$70K+",
    icon: "ph:money-fill",
  },
  {
    name: "Hours Worked",
    value: "1,643+",
    icon: "ph:clock-fill",
  },
  {
    name: "Total Jobs",
    value: "6",
    icon: "ph:briefcase-fill",
  },
];

const skills = [
  "MySQL",
  "Python",
  "Supabase",
  "MongoDB",
  "Firebase",
  "CSS",
  "Amazon Web Services",
  "Next.js",
  "Svelte",
  "JavaScript",
  "Golang",
  "Strapi",
  "Web Application",
  "React",
  "LangChain",
];

const teamMembers = [
  {
    name: "Siddharth J.",
    title: "Top Rated Plus",
    image: "/team/sid.jpeg",
    badges: ["100% Job Success", "Top Rated Plus", "Rising Talent"],
    description:
      "Full Stack Developer & AI Engineer with expertise in building scalable web applications and AI-powered solutions. Specializes in React, Node.js, Python, and modern development frameworks.",
    upworkProfile: "https://www.upwork.com/freelancers/~016fec88e43102b929",
    achievements: [
      "Completed 6+ enterprise projects with 100% success rate",
      "Maintained perfect 5-star client satisfaction",
      "Expertise in AI/ML integration and cloud architecture",
      "Strong background in system design and optimization",
    ],
  },
];

const companyInfo = {
  name: "UtilityGods",
  size: "2-10 workers",
  founded: "2023",
  clientFocus: [
    "Large business",
    "Medium business",
    "Small business",
    "Very small business",
  ],
  languages: ["English: Fluent", "Hindi: Native or Bilingual"],
  location: "Jaipur, India",
  upworkProfile: "https://www.upwork.com/agencies/utilitygods/",
  description:
    "UtilityGods is your go-to platform for streamlined services that make life easier for communities, businesses, and developers alike. Powered by a vision to be a one-stop utility hub, we offer a broad range of APIs and integrations that work seamlessly across all platforms. Committed to delivering value, our services are always free, embodying our dedication to community ease and accessibility.",
  specializations: [
    "Full-stack Development",
    "AI/ML Integration",
    "Cloud Architecture",
    "System Design",
    "API Development",
    "DevOps & Automation",
  ],
};

const actionButtons = {
  agency: [
    {
      text: "View Agency Profile",
      href: "https://www.upwork.com/agencies/utilitygods/",
      icon: "ph:buildings-bold",
      primary: true,
    },
    {
      text: "Contact Us",
      href: "/contact",
      icon: "ph:envelope-simple-bold",
      primary: false,
    },
  ],
  freelancer: [
    {
      text: "View Full Profile",
      href: "https://www.upwork.com/freelancers/~016fec88e43102b929",
      icon: "ph:user-bold",
      primary: true,
    },
    {
      text: "Read Blog",
      href: "blog",
      icon: "ph:folder-simple-bold",
      primary: false,
    },
  ],
};
---

<Layout title="Testimonials">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Our Achievements</Fragment>
      <Fragment slot="desc">
        Trusted by businesses worldwide through Upwork
      </Fragment>
    </Sectionhead>

    <!-- Upwork Overview -->
    <div class="mt-16">
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <div
          class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
          <a
            href={companyInfo.upworkProfile}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 hover:opacity-80 transition-opacity">
            <img src="/upwork-logo.svg" alt="Upwork" class="h-8" />
            <div class="text-xl font-semibold text-gray-800">
              Top Rated Plus Agency
            </div>
          </a>
          <div class="flex gap-3">
            {
              actionButtons.agency.map((button) => (
                <a
                  href={button.href}
                  target={button.href.startsWith("http") ? "_blank" : "_self"}
                  rel={
                    button.href.startsWith("http") ? "noopener noreferrer" : ""
                  }
                  class={`flex items-center gap-2 px-4 py-2 rounded-full transition-colors ${
                    button.primary
                      ? "bg-red-600 text-white hover:bg-red-700"
                      : "bg-gray-100 text-gray-700 hover:bg-gray-200"
                  }`}>
                  <Icon name={button.icon} class="w-5 h-5" />
                  <span>{button.text}</span>
                </a>
              ))
            }
          </div>
        </div>

        <p class="text-gray-600 mb-8">
          {companyInfo.description}
        </p>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
          {
            upworkStats.map((stat) => (
              <div class="text-center">
                <div class="flex justify-center mb-2">
                  <span class="text-red-500 w-6 h-6">
                    <Icon name={stat.icon} />
                  </span>
                </div>
                <div class="text-2xl font-bold text-gray-800">{stat.value}</div>
                <div class="text-sm text-gray-600">{stat.name}</div>
              </div>
            ))
          }
        </div>

        <!-- Specializations -->
        <div class="mb-12">
          <h3 class="text-lg font-semibold mb-4">Our Specializations</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {
              companyInfo.specializations.map((spec) => (
                <div class="flex items-center gap-2">
                  <Icon
                    name="ph:check-circle-fill"
                    class="w-5 h-5 text-green-500"
                  />
                  <span class="text-gray-700">{spec}</span>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Skills -->
        <div class="mb-12">
          <h3 class="text-lg font-semibold mb-4">Our Expertise</h3>
          <div class="flex flex-wrap gap-2">
            {
              skills.map((skill) => (
                <span class="px-3 py-1 bg-red-50 text-red-600 rounded-full text-sm">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Team -->
        <div class="mb-12">
          <h3 class="text-lg font-semibold mb-6">Team Lead</h3>
          <div class="flex justify-center">
            {
              teamMembers.map((member) => (
                <div class="text-center max-w-2xl">
                  <div class="w-32 h-32 mx-auto mb-4">
                    <img
                      src={member.image}
                      alt={member.name}
                      class="w-full h-full object-cover rounded-full"
                    />
                  </div>
                  <div class="font-semibold text-gray-800 text-xl mb-2">
                    <a
                      href={member.upworkProfile}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-red-600 transition-colors">
                      {member.name}
                    </a>
                  </div>
                  <div class="text-sm text-gray-600 mb-3">{member.title}</div>
                  <p class="text-gray-600 mb-4">{member.description}</p>
                  {member.badges && (
                    <div class="flex flex-wrap gap-2 justify-center mb-6">
                      {member.badges.map((badge) => (
                        <span class="px-3 py-1 bg-green-50 text-green-600 rounded-full text-sm">
                          {badge}
                        </span>
                      ))}
                    </div>
                  )}
                  <div class="flex justify-center gap-3 mb-8">
                    {actionButtons.freelancer.map((button) => (
                      <a
                        href={button.href}
                        target={
                          button.href.startsWith("http") ? "_blank" : "_self"
                        }
                        rel={
                          button.href.startsWith("http")
                            ? "noopener noreferrer"
                            : ""
                        }
                        class={`flex items-center gap-2 px-4 py-2 rounded-full transition-colors ${
                          button.primary
                            ? "bg-red-600 text-white hover:bg-red-700"
                            : "bg-gray-100 text-gray-700 hover:bg-gray-200"
                        }`}>
                        <Icon name={button.icon} class="w-5 h-5" />
                        <span>{button.text}</span>
                      </a>
                    ))}
                  </div>
                  <div class="text-left max-w-lg mx-auto">
                    <h4 class="font-semibold mb-2 text-gray-700">
                      Key Achievements:
                    </h4>
                    <ul class="list-disc list-inside space-y-2 text-gray-600">
                      {member.achievements.map((achievement) => (
                        <li>{achievement}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Company Info -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Company Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <Icon name="ph:users-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600"
                  >Agency Size: {companyInfo.size}</span
                >
              </div>
              <div class="flex items-center gap-2">
                <Icon name="ph:calendar-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600">Founded: {companyInfo.founded}</span
                >
              </div>
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <Icon name="ph:map-pin-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600"
                  >Location: {companyInfo.location}</span
                >
              </div>
              <div class="flex items-center gap-2">
                <Icon name="ph:translate-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600">
                  Languages: {companyInfo.languages.join(", ")}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Client Focus -->
    <div class="mt-12">
      <h3 class="text-2xl font-bold text-center mb-8">Client Focus</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          companyInfo.clientFocus.map((type) => (
            <div class="text-center p-6 rounded-lg bg-gray-50">
              <Icon
                name="ph:buildings-bold"
                class="w-8 h-8 mx-auto mb-2 text-red-500"
              />
              <div class="font-medium text-gray-800">{type}</div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</Layout>
