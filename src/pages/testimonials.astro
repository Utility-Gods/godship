---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const upworkStats = [
  {
    name: "Job Success",
    value: "100%",
    icon: "ph:star-fill",
  },
  {
    name: "Total Earned",
    value: "$70K+",
    icon: "ph:money-fill",
  },
  {
    name: "Hours Worked",
    value: "1,643+",
    icon: "ph:clock-fill",
  },
  {
    name: "Total Jobs",
    value: "6",
    icon: "ph:briefcase-fill",
  },
];

const skills = [
  "MySQL",
  "Python",
  "Supabase",
  "MongoDB",
  "Firebase",
  "CSS",
  "Amazon Web Services",
  "Next.js",
  "Svelte",
  "JavaScript",
  "Golang",
  "Strapi",
  "Web Application",
  "React",
  "LangChain",
];

const teamMembers = [
  {
    name: "Siddharth J.",
    title: "Top Rated Plus",
    image: "/team/sid.jpeg",
    badges: ["100% Job Success", "Top Rated Plus"],
  },
];

const companyInfo = {
  size: "2-10 workers",
  founded: "2023",
  clientFocus: [
    "Large business",
    "Medium business",
    "Small business",
    "Very small business",
  ],
  languages: ["English: Fluent", "Hindi: Native or Bilingual"],
  rate: "$50.00 - $80.00/hr",
  location: "Jaipur, India",
};
---

<Layout title="Testimonials">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Our Achievements</Fragment>
      <Fragment slot="desc">
        Trusted by businesses worldwide through Upwork
      </Fragment>
    </Sectionhead>

    <!-- Upwork Overview -->
    <div class="mt-16">
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <div class="flex items-center gap-4 mb-8">
          <img src="upwork-logo.svg" alt="Upwork" class="h-8" />
          <div class="text-xl font-semibold text-gray-800">
            Top Rated Plus Agency
          </div>
        </div>

        <p class="text-gray-600 mb-8">
          UtilityGods is your go-to platform for streamlined services that make
          life easier for communities, businesses, and developers alike. Powered
          by a vision to be a one-stop utility hub, we offer a broad range of
          APIs and integrations that work seamlessly across all platforms.
          Committed to delivering value, our services are always free, embodying
          our dedication to community ease and accessibility.
        </p>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
          {
            upworkStats.map((stat) => (
              <div class="text-center">
                <div class="flex justify-center mb-2">
                  <span class="text-red-500 w-6 h-6">
                    <Icon name={stat.icon} />
                  </span>
                </div>
                <div class="text-2xl font-bold text-gray-800">{stat.value}</div>
                <div class="text-sm text-gray-600">{stat.name}</div>
              </div>
            ))
          }
        </div>

        <!-- Skills -->
        <div class="mb-12">
          <h3 class="text-lg font-semibold mb-4">Our Expertise</h3>
          <div class="flex flex-wrap gap-2">
            {
              skills.map((skill) => (
                <span class="px-3 py-1 bg-red-50 text-red-600 rounded-full text-sm">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Team -->
        <div class="mb-12">
          <h3 class="text-lg font-semibold mb-6">Team Lead</h3>
          <div class="flex justify-center">
            {
              teamMembers.map((member) => (
                <div class="text-center max-w-sm">
                  <div class="w-32 h-32 mx-auto mb-4">
                    <img
                      src={member.image}
                      alt={member.name}
                      class="w-full h-full object-cover rounded-full"
                    />
                  </div>
                  <div class="font-semibold text-gray-800 text-xl">
                    {member.name}
                  </div>
                  <div class="text-sm text-gray-600 mb-3">{member.title}</div>
                  {member.badges && (
                    <div class="flex flex-wrap gap-2 justify-center">
                      {member.badges.map((badge) => (
                        <span class="px-3 py-1 bg-green-50 text-green-600 rounded-full text-sm">
                          {badge}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              ))
            }
          </div>
        </div>

        <!-- Company Info -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Company Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <Icon name="ph:users-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600"
                  >Agency Size: {companyInfo.size}</span
                >
              </div>
              <div class="flex items-center gap-2">
                <Icon name="ph:calendar-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600">Founded: {companyInfo.founded}</span
                >
              </div>
              <div class="flex items-center gap-2">
                <Icon name="ph:money-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600">Rate: {companyInfo.rate}</span>
              </div>
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <Icon name="ph:map-pin-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600"
                  >Location: {companyInfo.location}</span
                >
              </div>
              <div class="flex items-center gap-2">
                <Icon name="ph:translate-fill" class="w-5 h-5 text-gray-600" />
                <span class="text-gray-600">
                  Languages: {companyInfo.languages.join(", ")}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Client Focus -->
    <div class="mt-12">
      <h3 class="text-2xl font-bold text-center mb-8">Client Focus</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          companyInfo.clientFocus.map((type) => (
            <div class="text-center p-6 rounded-lg bg-gray-50">
              <Icon
                name="ph:buildings-bold"
                class="w-8 h-8 mx-auto mb-2 text-red-500"
              />
              <div class="font-medium text-gray-800">{type}</div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</Layout>
